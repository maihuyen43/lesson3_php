<?php
//Viết chương trình PHP để tìm vị trí của một phần tử trong một mảng.
$numbers = array( 1, 2, 3, 4, 5);
    foreach( $numbers as $value )
    {
        echo "Giá trị phần tử mảng là $value";
    }
    /* Phương thức thứ hai để tạo mảng trong PHP. */
    $numbers[0] = "Volvo";
    $numbers[1] = "BMW";
    $numbers[2] = "Toyota";
    $numbers[3] = "Mazda";
    $numbers[4] = "Kia";
    foreach( $numbers as $value )
    {
        echo "Giá trị phần tử mảng là $value";
    }  
?>